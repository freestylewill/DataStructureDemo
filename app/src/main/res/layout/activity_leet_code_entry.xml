<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".leetcode.LeetCodeEntryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_test1"
            style="@style/btn_style_lower"
            android:text="链表 Linked List"/>

        <Button
            android:id="@+id/btn_test2"
            style="@style/btn_style_lower"
            android:text="栈 Stack"/>

        <Button
            android:id="@+id/btn_test3"
            style="@style/btn_style_lower"
            android:text="队列 queue"/>

        <Button
            android:id="@+id/btn_test4"
            style="@style/btn_style_lower"
            android:text="排序算法"/>

        <Button
            android:id="@+id/btn_test5"
            style="@style/btn_style_lower"
            android:text="查找算法"/>

    </LinearLayout>

</ScrollView>
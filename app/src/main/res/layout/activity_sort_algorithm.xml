<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".leetcode.sort.SortAlgorithmActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_test1"
                style="@style/btn_style_lower"
                android:text="冒泡排序" />

            <Button
                android:id="@+id/btn_test2"
                style="@style/btn_style_lower"
                android:text="插入排序" />

            <Button
                android:id="@+id/btn_test3"
                style="@style/btn_style_lower"
                android:text="选择排序" />

            <Button
                android:id="@+id/btn_test5"
                style="@style/btn_style_lower"
                android:text="归并排序(Merge Sort)" />

            <Button
                android:id="@+id/btn_test6"
                style="@style/btn_style_lower"
                android:text="快速排序(Quick Sort)" />

            <Button
                android:id="@+id/btn_test4"
                style="@style/btn_style_lower"
                android:text="排序算法实测" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="冒泡、插入、选择、归并、快速排序算法实测结果：" />

            <TextView
                android:id="@+id/tv_sort_result1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bg_tv"
                android:minHeight="150dp"
                android:padding="15dp" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>